<%= form_for @publisher do |f| %>

  <% if @publisher.errors.any? %>
    <% @publisher.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:'form-control' %><br />
  </div>

  <%=link_to "Cancel", publishers_path, class:'btn btn-default' %>

  <% if @publisher[:id] %>
    <%= link_to "Delete", publisher_path(@publisher), method: :delete, data: { confirm: "Are you sure?" }, class:'btn btn-danger' %>
  <% end %>

  <%= f.submit "Submit", class:'btn btn-primary' %>

<% end %>

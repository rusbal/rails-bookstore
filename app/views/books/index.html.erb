<div id="books-index">

  <% @books.each_slice(4) do |book_grp| %>
    <div class="row">
      <% book_grp.each do |book| %>
      <div class="col-md-3 col-sm-3">
        <h3>
          <%= book.title %>
          <%= link_to 'del', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'edit', edit_book_path(book) %>
        </h3>
        <%= image_tag(book.coverpath) %>
        <%= link_to 'Read More', book_path(book), class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  <% end %>

</div>
